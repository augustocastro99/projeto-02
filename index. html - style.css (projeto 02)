    margin-bottom: 32px;
}

/* Artigos principais */
#artigos-principais {
    width: 65%;
}

#artigos-principais>h3, #artigos-destaque>h3 {
    font-family: 'Nunito', sans-serif;
    font-weight: 700;
    font-size: 25px;
    color: #313131;
}

