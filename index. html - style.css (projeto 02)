    font-family: 'Lexend Deca', sans-serif;
    font-size: 16px;
    margin: 10px 0 32px;
}

#imagem-1 {
    max-width: 569px;
    width: 45%;
    min-width: 440px;
}

/* Estilo Seção Artigos (Título + artigos principais + artigos em destaque) */
/* Geral da Seção */
