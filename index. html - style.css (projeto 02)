    color: #b6b6b6;
    margin: 10px 0 32px;
}

#cards {
    flex-wrap: wrap;
}

.card {
    width: 48%;
    background-color: #fff;
    padding: 20px;
    border-radius: 5px;
    margin-bottom: 20px;
}

.cabecalho_card {
    margin-bottom: 20px;
}

.cabecalho_card>p {
    font-family: 'Lexend Deca', sans-serif;
    font-size: 16px;
    color: #b6b6b6;
}

.cabecalho_card {
    color: #ea2181;
    font-size: 25px;
}

.conteudo_card>h4, .card_destaque>h4 {
    font-family: 'Nunito', sans-serif;
    font-weight: 700;
    font-size: 20px;
    color: #ea2181;
    margin-bottom: 5px;
}

.conteudo_card>p, #conteudo-final-textos>p {
    font-family: 'Lexend Deca', sans-serif;
