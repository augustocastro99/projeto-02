}


/* Começo estilos Responsividade*/
/* 1º width - 110 px */
@media screen and (max-width: 1100px) {
    #conteudo-esq>h1 {
        font-size: 48px;
    }

    .btn {
        font-size: 18px;
    }

    .card {
        width: 100%;
    }

    #conteudo-final-textos>p {
        font-size: 16px;
    }

    #conteudo-final-textos>h2 {
        font-size: 25px;
    }

}

/* 2º width - 920px */
@media screen and (max-width: 920px) {
    #conteudo-esq>h1{
        font-size: 40px;
    }
    .btn, .btn_menu {
        font-size: 16px;
    }
    #secao-artigos > h2{
        font-size: 25px;
    }
    #artigos-principais > h3, #artigos-destaque > h3{
        font-size: 20px;
    }
    #conteudo_card > p{
        font-size: 16px;
    }
    .conteudo_card > h4, .card_destaque > h4{
        font-size: 18px;
    }
}
/* 3º width - 820px */
@media screen and (max-width: 820px){
    #imagem-1{
        display: none;
    }
    #conteudo-esq{
        width: 65%;
        text-align: center;
    }
    #conteudo-inicial > div{
        justify-content: center;
    }
    #conteudo-esq > .btn{
        margin: auto;
    }
    #conteudo-esq > h1{
        font-size: 48px;
    }
    /* Artigos */
    #secao-artigos > div{
        flex-direction: column-reverse;
    }
    #artigos-principais, #artigos-destaque{
        width: 100%;
    }
    #artigos-destaque{
        margin-bottom: 64px;
    }
    .card{
        min-width: 100%;
    }
    /* Seção Final */
    #conteudo-final{
        flex-direction: column;
    }
    #conteudo-final-textos{
        width: 80%;
        margin-bottom: 32px;
        text-align: center;
    }
    #conteudo-final-textos > h2{
        text-align: inherit;
        margin-bottom: 16px;
    }
    #imagem-2{
        width: 60px;
        min-width: 200px;
    }
/* 4 width - 600px */
@media screen and (max-width: 600px) {
    #links-secoes{
        display: none;
    }
    #conteudo-esq > h1{
        font-size: 32px;
    }
    #conteudo-esq > p{
        display: none;
    }
    #conteudo-esq{
        width: 100%;
    }
}
