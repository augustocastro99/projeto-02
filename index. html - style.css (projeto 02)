style.css

@import url('https://fonts.googleapis.com/css2?family=Lexend+Deca&family=Nunito:wght@600;700;800&display=swap');

/* CSS Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

a {
    text-decoration: none;
    color: inherit;
}

/* Embrulho/Wrapper */
.wrapper {
    width: 90%;
    max-width: 1240px;
    margin: 0 auto;
}

.flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.btn {
    font-family: 'Lexend Deca';
    color: #EA0F78;
    background-color: #fff;
    padding: 10px 22px;
    border-radius: 5px;
    font-size: 20px;
    display: block;
    width: fit-content;
}

.btn:hover {
    opacity: 0.8;
}

/* Estilo Seção Inicial */
#secao-inicial {
    padding: 32px 0;
    color: #fff;
    background: linear-gradient(90deg, #D83482 0%, #EC0A76 100%);
}

/* Menu */
#logo {
    font-family: 'Nunito', sans-serif;
    font-size: 16px;
    font-weight: 700;
}

#links-secoes {
    font-family: 'Lexend Deca', sans-serif;
    font-size: 16px;
}

#links-secoes>a {
    padding: 10px 15px;
}

#links-secoes>a:hover {
    text-decoration: underline;
}

.btn_menu {
    font-size: 16px;
}

/* Banner */
#conteudo-inicial {
    margin-top: 64px;
}

#conteudo-esq {
    width: 40%;
}

#conteudo-esq>h1 {
    font-family: 'Nunito', sans-serif;
    font-size: 56px;
    font-weight: 800;
}

